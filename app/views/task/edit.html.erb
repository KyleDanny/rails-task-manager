
<div class="container">
  <div class="form-size">
    <%= simple_form_for(@task) do |f| %>
      <%= f.input :title %>
      <%= f.input :details %>
      <%= f.label :completed %>
      <%= f.check_box :completed %>
      <%= f.submit "Update Task" %>
    <% end %>
  </div>

  <div class="margin-spacing">
    <%= link_to "Back to list", tasks_path, class: "btn-ghost" %>
  </div>
</div>
